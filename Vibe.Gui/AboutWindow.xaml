<Window x:Class="Vibe.Gui.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight">
    <StackPanel Margin="20" Width="320">
        <TextBlock x:Name="ProgramName" FontWeight="Bold" FontSize="14" Margin="0,0,0,10" />
        <TextBlock x:Name="VersionText" Margin="0,0,0,10" />
        <TextBlock Text="License: MIT-0" Margin="0,0,0,10" />
        <TextBlock Margin="0,0,0,10">
            <Hyperlink Click="ConfigHyperlink_Click">config.json</Hyperlink>
        </TextBlock>
        <TextBlock>
            <Hyperlink NavigateUri="https://github.com/VladimirReshetnikov/Vibe" RequestNavigate="Hyperlink_RequestNavigate">
                https://github.com/VladimirReshetnikov/Vibe
            </Hyperlink>
        </TextBlock>
        <Button Content="OK" Width="75" Margin="0,20,0,0" HorizontalAlignment="Right" Click="Close_Click" />
    </StackPanel>
</Window>

